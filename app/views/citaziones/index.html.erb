<h1>Listing citaziones</h1>

<table>
  <tr>
    <th>Id</th>
    <th>User</th>
    <th>Date time</th>
    <th>Citazione</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @citaziones.each do |citazione| %>
  <tr>
    <td><%= citazione.id %></td>
    <td><%= citazione.user %></td>
    <td><%= citazione.date_time %></td>
    <td><%= citazione.citazione %></td>
    <td><%= link_to 'Show', citazione %></td>
    <td><%= link_to 'Edit', edit_citazione_path(citazione) %></td>
    <td><%= link_to 'Destroy', citazione, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

