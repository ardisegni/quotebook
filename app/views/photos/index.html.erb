<h1>Foto</h1>

<table>
  <tr>
    <th>Film</th>
    <th>Data e ora</th>
    <th>Nome del file</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.user_id %></td>
    <td><%= photo.date_time %></td>
    <td><%= photo.file_name %></td>
    <td><%= link_to 'Mostra', photo %></td>
    <td><%= link_to 'Modifica', edit_photo_path(photo) %></td>
    <td><%= link_to 'Elimina', photo, confirm: 'Sei sicuro di volere eliminare la foto?', method: :delete %></td>
  </tr>
<% end %>
</table>

